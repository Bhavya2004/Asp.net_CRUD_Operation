@using System.Data
@model DataTable
<style>
    .search-bar {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

    .search-input {
        flex: 1;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .search-button {
        margin-left: 10px;
    }
</style>

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>City List</h1>
        <a class="btn btn-success" href="@Url.Action("AddCity", "Loc_City")">Add City</a>
    </div>

    @*Search Bar*@
    <div class="search-bar">
        <input class="search-input" type="text" id="sample_1" placeholder="Search...">
        <button class="btn btn-primary search-button">Search</button>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col" class="text-center">City ID</th>
                <th scope="col" class="text-center">City Name</th>
                <th scope="col" class="text-center">State Name</th>
                <th scope="col" class="text-center">Country Name</th>
                <th scope="col" class="text-center">City Code</th>
                <th scope="col" class="text-center">Created</th>
                <th scope="col" class="text-center">Modified</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody id="sample_2">
            @foreach (DataRow dr in Model.Rows)
            {
                <tr>
                    <td class="text-center">@dr["CityID"]</td>
                    <td class="text-center">@dr["CityName"]</td>
                    <td class="text-center">@dr["StateName"]</td>
                    <td class="text-center">@dr["CountryName"]</td>
                    <td class="text-center">@dr["CityCode"]</td>
                    <td class="text-center">@dr["CreationDate"]</td>
                    <td class="text-center">@dr["Modified"]</td>
                    <td class="text-center">
                        <a class="btn btn-primary" href="@Url.Action("AddCity", "Loc_City", new { CityId = dr["CityID"] })">Edit</a>
                        <a class="btn btn-danger" href="@Url.Action("DeleteCity", "Loc_City", new { id = dr["CityID"] })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#sample_1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#sample_2 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}